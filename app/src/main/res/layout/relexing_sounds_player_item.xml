<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sound_play_layout"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/item_back_sound_1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sound_icon_iv"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/birdee" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sound_count_tv"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:background="@drawable/item_back_sound_1"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp" />

    <TextView
        android:id="@+id/sound_volume_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound_play_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp" />
</RelativeLayout>
