<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.BreathMotionShowActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/josefin_regular"
            android:text="@string/breathing"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_20ssp" />
    </RelativeLayout>


    <VideoView
        android:id="@+id/lottie_breathanim"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_cyan_ball"
        app:lottie_rawRes="@raw/deepbreathing" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/textcolorhint"
        android:elevation="@dimen/_5sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="Stop Animation"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>