<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vspace1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp" />

            <LinearLayout
                android:id="@+id/lnr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vspace1"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center_vertical"
                    android:text="Hey, "
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center_vertical"
                    android:text="Mylan"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/chatbot"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/vspace1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_snap" />

            <View
                android:id="@+id/vspace2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@id/lnr1" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vspace2" />

            <!--<com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vspace2"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:backgroundTint="@color/transparent"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/transparent"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorGravity="center"
                app:tabMode="scrollable" />
        -->
            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                app:dotsColor="#2698F3"
                app:dotsCornerRadius="8dp"
                app:dotsSize="@dimen/_12sdp"
                app:dotsSpacing="@dimen/_3sdp"
                app:dotsStrokeColor="#8BCBFF"
                app:dotsStrokeWidth="@dimen/_1sdp"
                app:dotsWidthFactor="2.5" />


            <RelativeLayout
                android:id="@+id/extrainfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dotsIndicator"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:fontFamily="@font/alata_regular"
                            android:text="5"
                            android:textColor="@color/apptextcolor"
                            android:textSize="@dimen/_15ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata_regular"
                            android:text="Days"
                            android:textColor="@color/apptextcolor"
                            android:textSize="@dimen/_15ssp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata_regular"
                        android:text="Streak"
                        android:textColor="@color/apptextcolor3"
                        android:textSize="@dimen/_18ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/alata_regular"
                        android:text="Medium"
                        android:textColor="@color/apptextcolor"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata_regular"
                        android:text="Stability"
                        android:textColor="@color/apptextcolor3"
                        android:textSize="@dimen/_18ssp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/vspace3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/extrainfo" />

            <LinearLayout
                android:id="@+id/moodshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vspace3"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_medium"
                    android:text="How you feeling today?"
                    android:textColor="@color/apptextcolor3"
                    android:textSize="@dimen/_18ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_verysad" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_moodoff" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_sad" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_happy" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_jolly" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/letsplaytogether"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/moodshow"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_medium"
                    android:text="Let's play together"
                    android:textColor="@color/apptextcolor3"
                    android:textSize="@dimen/_18ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/questionrecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/letsplaytogether"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_medium"
                    android:text="Recommended Meditating Lesson"
                    android:textColor="@color/apptextcolor3"
                    android:textSize="@dimen/_18ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/musicrecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>