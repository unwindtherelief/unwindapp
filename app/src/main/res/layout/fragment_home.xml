<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vspace1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp" />

            <LinearLayout
                android:id="@+id/lnr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vspace1"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_noti" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center_vertical"
                    android:text="Hey, "
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center_vertical"
                    android:text="Mylan"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/chatbot"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/vspace1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_snap" />

            <androidx.cardview.widget.CardView
                android:id="@+id/progressshow_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_below="@+id/lnr1"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/progresscardback"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_135sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                style="@style/CircularDeterminateProgressBar"
                                android:layout_width="@dimen/_135sdp"
                                android:layout_height="@dimen/_135sdp"
                                android:indeterminateOnly="false"
                                android:progress="60"
                                android:progressDrawable="@drawable/circle"
                                android:rotation="0"
                                tools:progress="96" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/quality_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_light"
                                    android:text="Quality"
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/_10ssp" />

                                <TextView
                                    android:id="@+id/txt_qualitydata"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="96.56%"
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/_15ssp" />

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_bullsign" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:fontFamily="@font/lato_light"
                                android:text="Sigtly better than yesterday"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/_8ssp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10ssp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/epiloguemedium"
                                android:text="More Positivity"
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/_13ssp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1.5"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/ic_movein" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/ic_womenwithraibow" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--<View
                android:id="@+id/vspace2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/lnr1" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vspace2" />-->

