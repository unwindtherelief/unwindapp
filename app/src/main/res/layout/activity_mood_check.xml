<!-- res/layout/mood_check_activity.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_assesment_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back2"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/josefin_regular"
            android:text="@string/mood_track"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/roundbg"
                android:elevation="@dimen/_10sdp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black">

                <TextView
                    android:id="@+id/textViewQuestionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/josefin_regular"
                    android:text="Question 1/20"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewQuestionNumber"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/rubikregular"
                    android:gravity="center_horizontal"
                    android:text="This is a sample question?"
                    android:textAlignment="gravity"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_15ssp" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/radioGroupOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewQuestion"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="16dp">

                <!-- Five RadioButtons for options -->
                <RadioButton
                    android:id="@+id/radioButtonOption1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/ripplerectbg"
                    android:buttonTint="@color/textcolor"
                    android:fontFamily="@font/josefin_regular"
                    android:layoutDirection="rtl"
                    android:padding="@dimen/_10sdp"
                    android:text="Option 1"
                    android:textAlignment="textStart"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />

                <RadioButton
                    android:id="@+id/radioButtonOption2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:background="@drawable/ripplerectbg"
                    android:buttonTint="@color/textcolor"
                    android:fontFamily="@font/josefin_regular"
                    android:layoutDirection="rtl"
                    android:padding="@dimen/_10sdp"
                    android:text="Option 2"
                    android:textAlignment="textStart"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />

                <RadioButton
                    android:id="@+id/radioButtonOption3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:background="@drawable/ripplerectbg"
                    android:buttonTint="@color/textcolor"
                    android:fontFamily="@font/josefin_regular"
                    android:layoutDirection="rtl"
                    android:padding="@dimen/_10sdp"
                    android:text="Option 3"
                    android:textAlignment="textStart"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />

                <RadioButton
                    android:id="@+id/radioButtonOption4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:background="@drawable/ripplerectbg"
                    android:buttonTint="@color/textcolor"
                    android:fontFamily="@font/josefin_regular"
                    android:layoutDirection="rtl"
                    android:padding="@dimen/_10sdp"
                    android:text="Option 4"
                    android:textAlignment="textStart"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />

                <RadioButton
                    android:id="@+id/radioButtonOption5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:background="@drawable/ripplerectbg"
                    android:buttonTint="@color/textcolor"
                    android:fontFamily="@font/josefin_regular"
                    android:layoutDirection="rtl"
                    android:padding="@dimen/_10sdp"
                    android:text="Option 5"
                    android:textAlignment="textStart"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_16ssp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/buttonNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/btn_next" />

            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonNext"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
