<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    android:orientation="vertical"
    tools:context=".authentication.SignupActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_regular"
        android:gravity="center_horizontal"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="@dimen/_28ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_regular"
        android:gravity="center_horizontal"
        android:text="Welcome to Unwind!"
        android:textColor="#C9393939"
        android:textSize="@dimen/_18ssp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/user_img" />

                    <EditText
                        android:id="@+id/editTextFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/alata_regular"
                        android:hint="Enter your first name"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/lastname_img" />

                    <EditText
                        android:id="@+id/editTextLastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/alata_regular"
                        android:hint="Enter your last name"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/dob_img" />

                    <TextView
                        android:id="@+id/textViewDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/alata_regular"
                        android:gravity="center_vertical"
                        android:text="dd | mm | yy"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spinnerContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/dob_img" />

                    <EditText
                        android:id="@+id/radioGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:drawableRight="@drawable/drop_img"
                        android:fontFamily="@font/alata_regular"
                        android:gravity="center_vertical"
                        android:hint="Enter your gender"
                        android:paddingRight="@dimen/_3sdp"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_15ssp" />


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_mobilenumber"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryCodePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        app:ccp_defaultNameCode="IN" />


                    <EditText
                        android:id="@+id/editTextMnumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1.2"
                        android:background="@null"
                        android:fontFamily="@font/alata_regular"
                        android:hint="Enter your mobile number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/email_img" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/alata_regular"
                        android:hint="Enter your Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/roundbg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/password_img" />

                    <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/alata_regular"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:textColor="@color/black_100"
                        android:textColorHint="@color/black_50"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/buttonSignup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:src="@drawable/signupbtn" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:src="@drawable/or_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="0"
                    android:src="@drawable/google_btn" />

                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0"
                    android:src="@drawable/facebook_img" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonLoginup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:backgroundTint="@color/purple_200"
                android:text="Login Here" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>