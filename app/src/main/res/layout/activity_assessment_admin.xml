<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_assesment_bg"
    android:orientation="vertical"
    tools:context=".admin.AssessmentAdminActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/josefin_regular"
            android:text="@string/add_assesment"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_20ssp" />

        <ImageView
            android:id="@+id/button_showData"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_threeline_btn" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/roundbg"
                android:elevation="@dimen/_10sdp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black">

                <EditText
                    android:id="@+id/editText_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/josefin_regular"
                    android:hint="Enter Question Here..."
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:hint="Option 1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/editText_value1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:gravity="center"
                    android:hint="Value"
                    android:inputType="number"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:hint="Option 2"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/editText_value2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:gravity="center"
                    android:hint="Value"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:hint="Option 3"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/editText_value3"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:gravity="center"
                    android:hint="Value"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:hint="Option 4"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/editText_value4"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:gravity="center"
                    android:hint="Value"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_option5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:hint="Option 5"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/editText_value5"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/ripplerectbg"
                    android:fontFamily="@font/josefin_regular"
                    android:gravity="center"
                    android:hint="Value"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_50"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/btn_add_questions" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>