<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color with 40% opacity -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D7414040" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <!-- Line gradient to create a linear effect -->
    <item android:top="1dp">
        <shape android:shape="line">
            <corners android:radius="@dimen/_20sdp" />
            <gradient
                android:angle="90"
                android:endColor="#80272727"
                android:startColor="#80272727"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
